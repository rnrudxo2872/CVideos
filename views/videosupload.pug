extends layout/main

block content
    .form-container
        form(action=routes.videos+routes.upload, method="post")
            label(for="file") File
            input(type="file", id="file", name="file")
            input(type="text", name="title", placeholder="Title")
            textarea(name="desription", cols="30", rows="10", placeholder="Desription")
            input(type="submit", value="업로드")