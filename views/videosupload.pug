extends layout/main

block content
    .form-container
        form(action=routes.videos+routes.upload, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="file") File
                input(type="file", id="file", name="videoFile", required=true, accept="video/*")
            input(type="text", name="title", placeholder="Title", required=true)
            textarea(name="description", cols="30", rows="10", placeholder="Desription", required=true)
            input(type="submit", value="업로드")